<% provide(:title, 'Log in') %>
<h1>Log in</h1>
<div class="row">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <p class="center">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Click Here To Sign up!', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
    </p>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="checkbox span">
      <% if devise_mapping.rememberable? -%>
          <strong>Remember me?</strong> <%= f.check_box :remember_me, checked: true %>
      <% end %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'right' %>
      <% end -%>
    </div>
    <%= f.submit 'Sign in', :class => 'btn btn-primary' %>
  <% end %>
</div>

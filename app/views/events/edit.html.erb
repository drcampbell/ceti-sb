<% provide(:title, 'Edit Event') %>
<h1>Edit Your Event</h1>

<%= simple_form_for(@event, html: { multipart: true }) do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

          <div class="form-group">
            <div class='input-group date' id='datetimepicker9'>
              <input type='datetime' name='start' class="form-control" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
            </div>
          </div>

          <div class="form-group">
            <div class='input-group date' id='datetimepicker10'>
              <input type='datetime' name='end' class="form-control" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
            </div>
          </div>

      <script type="text/javascript">
          $(function () {
              $('#datetimepicker9').datetimepicker();
              $('#datetimepicker10').datetimepicker();
              $("#datetimepicker9").on("dp.change",function (e) {
                  $('#datetimepicker10').data("DateTimePicker").setMinDate(e.date);
              });
              $("#datetimepicker10").on("dp.change",function (e) {
                  $('#datetimepicker9').data("DateTimePicker").setMaxDate(e.date);
              });
          });
      </script>
    </div>


    <div class="field">
      <%= f.label :content, 'Description' %>
      <%= f.text_area :content, placeholder: 'Compose new event...' %>
    </div>

    <div class="field">
      <%= f.label :tag_list, 'Tags (separated by commas)' %><br />
      <%= f.text_field :tag_list_commas %>
    </div>

    <%= f.submit 'Post', class: 'btn btn-primary' %>
<% end %>
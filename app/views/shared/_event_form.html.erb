<%= form_for @event do |f| %>

    <div class="field">
      <% if @event.title then value = @event.title else value = "What is the name of the event?" end %>
      <%= f.label :title, 'Title' %><br />
      <%= f.text_field :title, placeholder: "What is the name of the event?"%>
    </div>
    <div class="field"> 
      <%= puts current_user.school_id %>
      <%= f.hidden_field :loc_id, :value => current_user.school_id %>
    </div>
    <div class="field">
      <%= f.text_area :content, value: @event.content, placeholder: 'Compose new event...' %>
    </div>

    <div class="field">
      <%= f.label :tag_list, 'Tags (separated by commas)' %><br />
      <%= f.text_field :tag_list, value: @event.tag_list %>
    </div>
    <% Time.zone = "Eastern Time (US & Canada)" %>
    <% if @event.event_start then start_value = @event.event_start else start_value = Time.now
 end %>
    <% if @event.event_end then end_value = @event.event_end else end_value = Time.now
 end %>
    <div class="form-group">
      <label>Start</label>
      <%= f.datetime_select :event_start, default: 0.days.from_now.in_time_zone("Eastern Time (US & Canada)"), value:start_value.in_time_zone("Eastern Time (US & Canada)") %>
    </div>
    <div class="form-group">
      <label>End</label>
      <%= f.datetime_select :event_end, 0.days.from_now.in_time_zone("Eastern Time (US & Canada)"),value: end_value.in_time_zone("Eastern Time (US & Canada)") %>
    </div>
    <%= f.submit 'Post', :data => {:disable_with => "Saving..."}, class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
    $('.datetimepicker').datetimepicker({
      inline: true,
      sideBySide: true
    });
</script>


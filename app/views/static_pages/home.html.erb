<% if params[:tab] then tab = params[:tab] else tab = "tab_all" end %>
<% if user_signed_in? %>
  <div class="row">

      <!-- <aside class="col-md-4"> -->
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <div>
          <a href="https://play.google.com/store/apps/details?id=com.ceti_sb.android&utm_source=global_co&utm_medium=prtnr&utm_content=Mar2515&utm_campaign=PartBadge&pcampaignid=MKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1"><img alt="Get it on Google Play" src="https://play.google.com/intl/en_us/badges/images/generic/en-play-badge.png" width="180" align="middle"/></a>

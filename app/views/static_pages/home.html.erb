<% if user_signed_in? %>
  <div class="row">
      <!-- <aside class="col-md-4"> -->
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <% @events = current_user.events.paginate(page: params[:page]) %>

        <section class="event_calendar">
          <%= render 'events/week_calendar' %>
        </section>
        
      <div class="row">
        <p>  </p>
        <div class="col-md-8">
        <%= button_to "Create New Event", 'events/new', class: 'btn-primary', method: :get %>
      </div>
      </div>
      <div class="row">
      <div class="col-md-8">
        <h3>Event Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
    </div>
<% else %>
    <div class="center jumbotron">
      <h1>Welcome to the School Business App</h1>

      <h2>
        Developed by CETI at the Ohio State University.
      </h2>

      <%= link_to 'Sign up now!', new_user_registration_path, class: 'btn btn-lg btn-primary' %>
    </div>

   <!-- <%= link_to image_tag('rails.png', alt: 'Rails logo'),
                          'http://rubyonrails.org/' %> -->
<% end %>

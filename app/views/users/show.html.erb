<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/user_profile' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @events.any? %>
        <h3>Events (<%= @events.count %>)</h3>
        <ol class="events">
          <%= render @events.order(event_end: :desc).reverse %>
        </ol>
        <%= will_paginate @events %>
    <% end %>
  </div>
</div>